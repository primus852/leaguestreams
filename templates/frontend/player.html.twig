<body style="background-color: #000;overflow:hidden;">
<div id="full">
    <!--TOP BAR-->
    <div style="position: relative;
    top: 0;
    left: 0;
    width: 100%;
    background: rgba(0,0,0,0.5);
    height: 65px;">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-2" style="padding-left:25px;padding-top:5px;">
                        <a href="{{ path('mainPage') }}">
                            <img src="{{ preload(asset('assets/ls/img/logo_icon.png')) }}" width="30" height="30" alt="">
                        </a>
                    </div>
                    <div class="col-7" style="padding-left:0;padding-top:25px;">
                        <div class="lsFooterBtn">
                            <label for="show-foot" class="refreshInGamePlayer"><i class="fa fa-refresh"></i> Not in Game</label>
                        </div>
                    </div>
                    <div class="col-3" style="padding-left:0;padding-top:10px;">
                        <div class="row">
                            <div class="col-1">
                                <i class="fa fa-info-circle fa-2x tt" title="<span style='text-decoration:underline;'>Attached Summoners:</span><br />{% for summoner in summoners %}{{ summoner.region.short|upper }}-{{ summoner.name }}<br />{% endfor %}" style="color:#fff;line-height:0.8em;"></i>
                            </div>
                            <div class="col-5">
                                <input class="form-control rounded-0 mr-sm-2" style="height:28px;" id="summoner" type="text" placeholder="Summoner Name">
                            </div>
                            <div class="col-3">
                                <input type="hidden" id="streamerId" value="{{ streamerId }}"/>
                                <select id="region" name="region" class="form-control mr-sm-2">
                                    <option value="1">br</option>
                                    <option value="2">eune</option>
                                    <option value="3">euw</option>
                                    <option value="4">lan</option>
                                    <option value="5">las</option>
                                    <option value="6" selected="selected">na</option>
                                    <option value="7">oce</option>
                                    <option value="8">tr</option>
                                    <option value="9">ru</option>
                                    <option value="10">kr</option>
                                    <option value="12">jp</option>
                                    <option value="11">pbe</option>
                                </select>
                            </div>
                            <div class="col-3">
                                <a role="button" href="#" class="btn btn-outline-success my-2 my-sm-0 btn-green btn-block rounded-0" id="submitSummoner">
                                    <i class="fa fa-plus"></i> Smurf
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--TOP BAR END-->
    <div id="playerMain"></div>

    <!-- footer -->
    <footer>
        <div class="lsFooterBoxInner">
            <input type="checkbox" id="show-foot" name="show-the-footer" class="r-foot-check">
            <nav class="lsFooter">
                <div class="default-width">
                    <div class="lsFooterInner">
                        <ul class="footNavUL"></ul>
                    </div>
                </div>
            </nav>
        </div>
    </footer>
</div>

<input type="hidden" id="ajax-route-check-summoner" value="{{ path('checkSummoner') }}"/>
