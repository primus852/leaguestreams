    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ preload(asset('assets/ls/img/apple-touch-icon-72x72.png')) }}"/>
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ preload(asset('assets/ls/img/apple-touch-icon-144x144.png')) }}"/>
