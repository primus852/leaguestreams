    <link rel="stylesheet" type="text/css" href="{{ asset('assets/node_modules/cookieconsent/build/cookieconsent.min.css') }}" />
    <script src="{{ asset('assets/node_modules/cookieconsent/build/cookieconsent.min.js') }}"></script>
    <script>
        window.addEventListener("load", function(){
            window.cookieconsent.initialise({
                "palette": {
                    "popup": {
                        "background": "#efefef",
                        "text": "#404040"
                    },
                    "button": {
                        "background": "#8ec760",
                        "text": "#ffffff"
                    }
                }
            })});
    </script>
</head>
<body>
<div id="preloader" style="background: #333 url('{{ preload(asset('assets/vendor/ls/img/loader.svg')) }}') no-repeat center center;"></div>
<aside id="sidebar" class="nano">
    <div class="nano-content" id="pScrollerMenu">
        <div class="logo-container"><img src="{{ preload(asset('assets/ls/img/logo_icon.png')) }}" id="logo" style="max-height:70px;">LeagueStreams</div>
        <menu class="menu-segment">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div class="userWelcome">Benutzer: {{ app.user.username }}</div>
                <br/>
                <a href="{{ path('fos_user_security_logout') }}" class="btn btn-green rounded-0">Abmelden <i class="fa fa-lock"></i> </a>
                <br/>
                <br/>
            {% endif %}
            <ul>
                <li id="streamerMenu" class="title">
                    Streams
                </li>
                <li id="mLive"><a href="{{ path('mainPage') }}" class="mLink">Live<span class="nm-color-light-red"> ({{ render(controller('App\\Controller\\FragmentController::getLive')) }})</span></a></li>
                <li id="mAll"><a href="{{ path('allStreamer') }}" class="mLink">...all</a></li>
                <li id="mChamp"><a href="{{ path('byChampion') }}" class="mLink">...by Champion</a></li>
                <li id="mRole"><a href="{{ path('byRole') }}" class="mLink">...by Role</a></li>
                {% if is_granted("ROLE_SUPER_ADMIN") %}
                    <li id="mSmurfs"><a href="{{ path('manageSmurfs') }}" class="mLink">Manage Smurfs</a></li>
                {% endif %}
            </ul>
        </menu>
        <div class="separator"></div>
        <menu class="menu-segment">
            <ul class="labels">
                <li id="streamerMenu" class="title">
                    VODs <span class="badge badge-danger badge-xs">beta</span>
                </li>
                <li id="vChamp">
                    <a href="{{ path('vodsByChampion') }}" class="mLink">
                        ...by Champion
                    </a>
                </li>
                <li id="vRole">
                    <a href="#" class="mLink toggleTree">
                        <i class="fa fa-chevron-right"></i> ...by Role
                    </a>
                    <ul class="treeMenu" style="display: none;">
                        <li id="vRoleTop" class="treeItem">
                            <a href="{{ path('vodsByRole', {'role':'top'}) }}" class="mLink">
                                Top
                            </a>
                        </li>
                        <li id="vRoleJungle" class="treeItem">
                            <a href="{{ path('vodsByRole', {'role':'jungle'}) }}" class="mLink">
                                Jungle
                            </a>
                        </li>
                        <li id="vRoleMid" class="treeItem">
                            <a href="{{ path('vodsByRole', {'role':'mid'}) }}" class="mLink">
                                Mid
                            </a>
                        </li>
                        <li id="vRoleBot" class="treeItem">
                            <a href="{{ path('vodsByRole', {'role':'bot'}) }}" class="mLink">
                                Bot
                            </a>
                        </li>
                        <li id="vRoleSupport" class="treeItem">
                            <a href="{{ path('vodsByRole', {'role':'support'}) }}" class="mLink">
                                Support
                            </a>
                        </li>
                    </ul>
                </li>
                <li id="vWishes">
                    <a href="{{ path('vodsByWishes') }}" class="mLink">
                        ...by my Wishes
                    </a>
                </li>
            </ul>
        </menu>
        <div class="separator"></div>
        <menu class="menu-segment">
            <ul>
                <li id="streamerMenu" class="title">
                    Stream/Summoner
                    <span class="icon">
                        <a href="{{ path('addStreamer') }}"><span class="fa fa-plus"></span></a>
                    </span>
                </li>
            </ul>
        </menu>
        <div class="separator"></div>
        <div class="menu-segment">
            <ul class="labels">
                <li class="title mLink">Latest Streams <span class="icon"><span class="glyphicon glyphicon-cog"></span>&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-plus"></span></span></li>
                {{ render(controller('App\\Controller\\FragmentController::topStreamer')) }}
                <li id="clientManage"><a href="{{ path('allStreamer') }}" class="italic-link mLink">Moar</a></li>
            </ul>
        </div>
        <div class="bottom-padding"></div>
        <div class="separator"></div>
        <div class="menu-segment">
            <div class="ls-in-game"><a href="{{ path('privacyPolicy') }}">Privacy Policy</a> | Contact Us</div>
        </div>
    </div>
</aside>


